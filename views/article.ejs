<%- include('./partial/header')%>
<form class="article">
  <div class="form-group">
    <input type="text" class="form-control" placeholder="文章标题(50字以内)" name="title">
  </div>
  <div class="form-group">
    <textarea id="post-editor" class="form-control" cols="30" rows="10" name="content" style="display: none"></textarea>
  </div>
  <input type="hidden" name="tag" class="article-tag">
  <div class="form-group">
    <div class="sort select-tag">
      <span>选择分类：</span>
      <% tags.forEach(function(tag){ %>
      <span class="label label-default <% if (tag.tag ==='default') { %>label-primary<% } %>"><%= tag.tag %></span>
      <% }) %>
    </div>
  </div>
  <div class="form-group">
    <div class="sort add-tag">
      <span>增加分类：</span>
      <input type="text" class="label-input">
      <button type="button" class="label-btn">增加分类</button>
    </div>
  </div>
  <div class="form-group article-submit">
    <a href="javascript:;" class="btn btn-primary article-preview"><i class="glyphicon glyphicon-eye-open"></i>预览文章</a>
    <button type="submit" class="btn btn-primary article-publish"><i class="glyphicon glyphicon-send"></i>发表文章</button>
  </div>
  <div class="alert alert-success hidden"></div>
  <div class="alert alert-danger hidden"></div>
</form>
<%- include('./partial/footer')%>